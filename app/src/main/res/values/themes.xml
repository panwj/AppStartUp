<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/teal_200</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/teal_200</item>
        <!-- Customize your theme here. -->
        <item name="android:windowAnimationStyle">@style/DefaultActivityAnimation</item>
    </style>

    <style name="DefaultActivityAnimation">
        <item name="android:activityOpenEnterAnimation">@anim/durec_add_activiity_in_from_right</item>
        <item name="android:activityOpenExitAnimation">@anim/durec_anim_quiet</item>
        <item name="android:activityCloseEnterAnimation">@anim/durec_anim_quiet</item>
        <item name="android:activityCloseExitAnimation">@anim/durec_add_activiity_out_to_right
        </item>
    </style>

    <style name="Theme.AppCompat.StartUp" parent="@style/Theme.MyApplication">
        <item name="android:windowBackground">@color/purple_200</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <!--    修改background背景时设置该属性为true会影响状态栏颜色，导致始终为透明的   -->
        <!--<item name="android:windowFullscreen">true</item>-->
    </style>
</resources>